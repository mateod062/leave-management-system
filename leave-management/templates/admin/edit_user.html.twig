{# templates/admin/edit_user.html.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Edit User</title>
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
</head>
<body>
<div class="edit-user-container">
    <h1>Edit User</h1>
    {{ form_start(form) }}

    {% for field in form %}
        {% if field.vars.name == '_token' %}
            {{ form_widget(field) }}
        {% else %}
            <div class="form-group">
                {{ form_label(field) }}
                {{ form_widget(field) }}
                {% if field.vars.name != 'submit' %}
                    <div class="form-error">
                        {{ form_errors(field) }}
                    </div>
                {% endif %}
            </div>
        {% endif %}
    {% endfor %}

    {{ form_end(form) }}
</div>
</body>
</html>
